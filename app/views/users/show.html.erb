<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-4">
    <h1>
      <%= @user.name %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
      <%= gravatar_for @user %>
  </div>
  <div class="col-md-6">
    <h4>
      Bio:
    </h4>
    <p>

    </p>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
    <p><strong>Integrate with google account:</strong></p>
    <a href="/auth/google_oauth2">
      <%= image_tag "google_32.png", :alt => "Google" %>
    </a>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br>
    <% if logged_in? && current_user.admin? %>
      <%= button_to "Create New Post", new_movie_path, :method => "get" %>
    <% end %>
  </div>
</div>
