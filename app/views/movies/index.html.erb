<% provide(:title, 'All movies') %>

<h1>All movies</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(movies_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :name, params[:name], placeholder: "Search Posts" %>
    <%= submit_tag "Search" %>
    <% end %>
  </div>
</div>

<%= will_paginate %>

<ul class="items">
  <% @movies.each do |movie| %>
    <li class="item">
        <%= link_to movie.name, movie %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>